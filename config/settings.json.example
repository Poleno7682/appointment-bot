{
  "base_url": "https://your-booking-system.com/api/schedule",
  "site_url": "https://your-booking-system.com/booking/",
  "email": "your-email@example.com",
  "repeat_minutes": 30,
  "prefixes": [
    "733", "668", "883", "602", "690", "577", "886",
    "880", "517", "784", "793", "697", "510", "881", "575"
  ],
  "retry_settings": {
    "max_retries": 5,
    "initial_delay": 1,
    "delay_multiplier": 2
  },
  "reset_cycle": {
    "enabled": true,
    "interval_hours": 168,
    "max_future_days": 30,
    "marker_file": "/var/lib/appointment-bot/last-reset"
  },
  "logging": {
    "level": "INFO",
    "file": "appointment_bot.log",
    "format": "[%(asctime)s] [%(levelname)s] %(message)s"
  }
} 